<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item>
        <shape>
            <padding android:left="0dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>
            <solid android:color="#FF000000"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <padding 
                android:left="0dp"
                android:top="1dp"
                android:right="0dp"
                android:bottom="0dp"/>
            <solid android:color="#FF58585A"/>
            <corners android:radius="0dp"/>
        </shape>
    </item>
    
    <item>
        <shape>
            
            <padding android:left="2dp"
                android:top="3dp"
                android:right="2dp"
                android:bottom="2dp"/>
            <gradient
		        android:angle="270"
		        android:startColor="#FF181818"
		        android:endColor="#FF111111"
		        android:type="linear"/>
        </shape>
    </item>
</layer-list>