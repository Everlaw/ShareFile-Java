<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false"><layer-list>
            <item><shape>
                    <solid android:color="#0096C73E" />

                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape></item>
            <item><bitmap android:gravity="center" android:src="@drawable/home_button_white" />
            </item>
        </layer-list></item>
    <item android:state_enabled="true" android:state_pressed="true"><layer-list>
            <item><shape>
                    <solid android:color="#FF96C73E" />

                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape></item>
            <item><bitmap android:gravity="center" android:src="@drawable/home_button_white" />
            </item>
        </layer-list></item>
    <item android:state_enabled="false"><layer-list>
            <item><shape>
                    <solid android:color="#0096C73E" />

                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                </shape></item>
            <item><bitmap android:alpha="100" android:gravity="center" android:src="@drawable/home_button_white" />
            </item>
        </layer-list></item>

</selector>